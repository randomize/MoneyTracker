<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moneytracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" android:targetSdkVersion="18" />
	<uses-permission android:name="android.permission.INTERNET" /> 

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.moneytracker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
 		<activity
            android:name="com.example.moneytracker.TodoDetails"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        
 		<activity
            android:name="com.example.moneytracker.SettingsActivity"
			android:windowSoftInputMode="stateHidden" >
        </activity>

 		<activity
            android:name="com.example.moneytracker.AccountsActivity"
            android:label="@string/accounts"
			>
        </activity>

 		<activity
            android:name="com.example.moneytracker.AccountAddActivity"
			android:windowSoftInputMode="stateHidden" >
        </activity>

 		<activity
            android:name="com.example.moneytracker.AccountEditActivity"
			android:windowSoftInputMode="stateHidden" >
        </activity>

 		<activity
            android:name="com.example.moneytracker.SummaryActivity"
            android:label="@string/status"
			>
        </activity>

 		<activity
            android:name="com.example.moneytracker.TransactionListActivity"
			android:windowSoftInputMode="stateHidden" >
        </activity>

 		<activity
            android:name="com.example.moneytracker.DebtsListActivity"
            android:label="@string/debts"
			android:windowSoftInputMode="stateHidden" >
        </activity>

 		<activity
            android:name="com.example.moneytracker.DebtAddActivity"
            android:label="@string/debts"
            >
        </activity>

 		<activity android:name="com.example.moneytracker.TransactionAddActivity" />
 		<activity android:name="com.example.moneytracker.Grapher" />
 		<activity android:name="com.example.moneytracker.AccumListActivity" />
 		<activity android:name="com.example.moneytracker.AccumEditActivity"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog"
            android:excludeFromRecents="true"
 		     />
 		<activity android:name="com.example.moneytracker.AccumulationAddActivity" />

 		<activity android:name="com.example.moneytracker.BugetListActivity" 
            android:label="@string/budget"
 		    />

 		<activity
            android:name="com.example.moneytracker.BugetAddActivity"
            android:label="@string/buget_add"
            >
        </activity>

 		<activity
            android:name="com.example.moneytracker.MembersListActivity"
            android:label="@string/members_list"
            >
        </activity>

 		<activity
            android:name="com.example.moneytracker.CurrencyListActivity"
            android:label="@string/currency_list"
            >
        </activity>

 		<activity
            android:name="com.example.moneytracker.ExchangeActivity"
            android:label="@string/exchange"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog"
            android:excludeFromRecents="true"
            >
        </activity>

    </application>
</manifest>
